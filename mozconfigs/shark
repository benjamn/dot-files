. $topsrcdir/browser/config/mozconfig
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/obj-ff-shark
ac_add_options --enable-libxul --enable-shark --enable-debug-info-modules
# ac_add_options --enable-debug --disable-optimize
ac_add_options --disable-debug --enable-optimize
ac_add_options --enable-shared --disable-static
ac_add_options --with-macos-sdk=/Developer/SDKs/MacOSX10.5.sdk
mk_add_options MOZ_MAKE_FLAGS="-s -j4"
mk_add_options AUTOCONF=autoconf2.13
